@page
@model IndexModel
@{
    ViewData["Title"] = "Mini Blog";
}

<div class="container">
    <h1 class="display-4 text-center">Welcome to Mini Blog</h1>
    <hr />
    <h2 class="text-center">Latest Posts</h2>

    <div class="row">
        @foreach (var post in Model.Posts)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Description</p>
                        <p class="card-text">
                            <strong>Tags:</strong>
                            @foreach (var tag in post.PostTags)
                            {
                                <span class="badge badge-primary">@tag.Tag.Name</span>
                            }
                        </p>
                        <p class="card-text"><small class="text-muted">Posted on @post.DateCreated.ToString("yyyy-MM-dd HH:mm")</small></p>
                        <a href="/Posts/Details/?id=@post.Id" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
